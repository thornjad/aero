#!/usr/bin/env sh
# Configures Emacs for building with native compilation support

./autogen.sh && ./configure \
  --disable-dependency-tracking \
  --disable-silent-rules \
  --with-dbus \
  --without-imagemagick \
  --without-mailutils \
  --with-cairo \
  --with-modules \
  --with-xml2 \
  --with-gnutls \
  --with-rsvg \
  --with-nativecomp

echo "Now run:"
echo "CC=\"gcc-10\" make -j$(nproc) NATIVE_FULL_AOT=1"
